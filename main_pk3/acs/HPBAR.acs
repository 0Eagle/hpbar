//Запуск трекера на клиенте.
script "HPBar_Open-cs" OPEN CLIENTSIDE
{
	delay(35+(ConsolePlayerNumber()/4));
	int x,y,rank,hp_limit,maxhp_limit,i,tid,max_hp,hp,n,hpp,kills;
	bool friendly_show;
	str name,statemsg,killsmsg;
	int hpbar_tracker_x_ = GetCVar("hpbar_tracker_x");
	int hpbar_tracker_y_ = GetCVar("hpbar_tracker_y");
	bool hpbar_tracker_ = GetCVar("hpbar_tracker");
	SetHudSize(TRACKER_HUD_WIDTH, TRACKER_HUD_HEIGHT, true);
	SetFont(DEFAULT_FONT);
	while(true)
	{
		delay(3);
		if(hpbar_tracker_)
		{
			x = to_int((hpbar_tracker_x_ - 0.5) * GetScreenWidth() / GetScreenHeight() * TRACKER_HUD_HEIGHT) + (TRACKER_HUD_WIDTH / 2);
			y = to_fixed(to_int((hpbar_tracker_y_ - 0.5) * GetScreenHeight()) + (TRACKER_HUD_HEIGHT / 2));
			friendly_show = get_bool_user_cvar("hpbar_show_friendly");
			for(rank = 0; rank < NUM_RANKINGS; rank++)
			{
				hp_limit = 0;
				maxhp_limit = 0;
				maxhp_rankings[rank] = -1;
				for(i = 1; i < MAX_TRACKERS; i++)
				{
					tid = tracked_tids[i];
					if((tid != INVALID_TID) && (!already_selected(i,rank)))
					{
						max_hp = tracked_max_hps[i];
						hp = tracked_hps[i];
						if(((max_hp > maxhp_limit) || ((max_hp == maxhp_limit) && (hp > hp_limit))) && (friendly_show || ((tracked_flags[i] & FLAG_FRIENDLY) == 0)))
						{
							maxhp_rankings[rank] = i;
							maxhp_limit = max_hp;
							hp_limit = hp;
						}
					}
				}
				n = maxhp_rankings[rank];
				if(n != -1)
				{
					name = GetCVarString(StrParam(s:"hpbar_tracked_names", d:n));
					if(!streq(name,""))
					{
						hp = tracked_hps[n];
						max_hp = tracked_max_hps[n];
						hpp = percent(hp,max_hp,100,true);
						statemsg = " ";
						if(tracked_flags[n] & FLAG_REFLECTIVE)statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_REFLECT_LNG);
						if((tracked_flags[n] & FLAG_INVULNERABLE) && !(tracked_flags[n] & FLAG_DEAD))statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_INVUL_LNG);
						if(tracked_flags[n] & FLAG_FRIENDLY)statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_FRIEND_LNG);
						if(tracked_flags[n] & FLAG_GHOST)statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_GHOST_LNG);
						if(tracked_flags[n] & FLAG_INVISIBLE)statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_INVIS_LNG);
						if(tracked_flags[n] & FLAG_STEALTH)statemsg = StrParam(s:statemsg, l:HUD_HPBAR_TRACKER_STEALTH_LNG);
						killsmsg = "";
						if(GetCVar("hpbar_rekt"))
						{
							kills = tracked_kills[n];
							if(kills >= 10)
							{
								killsmsg = StrParam(l:HUD_HPBAR_TRACKER_10REKT_S_LNG, d:kills, l:HUD_HPBAR_TRACKER_10REKT_E_LNG);
							}
							else if(kills >= 5)
							{
								killsmsg = StrParam(l:HUD_HPBAR_TRACKER_5REKT_S_LNG, d:kills, l:HUD_HPBAR_TRACKER_5REKT_E_LNG);
							}
							else if(kills >= 2)
							{
								killsmsg = StrParam(l:HUD_HPBAR_TRACKER_2REKT_S_LNG, d:kills, l:HUD_HPBAR_TRACKER_2REKT_E_LNG);
							}
							else if(kills >= 1)
							{
								killsmsg = StrParam(l:HUD_HPBAR_TRACKER_1REKT_S_LNG, d:kills, l:HUD_HPBAR_TRACKER_1REKT_E_LNG);
							}
						}
						HudMessage(s:hpp_to_color(hpp), d:hp, s:"/", d:max_hp, s:"\c-";HUDMSG_FADEOUT, HUD_TEXT_TRACKER_NAME_ID + rank, CR_WHITE, hpbar_align_right(x + 80), y + rank * 12.0, TRACKER_HOLDTIME, TRACKER_FADETIME);
						HudMessage(s:hpp_to_color(hpp), d:hpp, s:"%\c-";HUDMSG_FADEOUT, HUD_TEXT_TRACKER_NAME_ID + NUM_RANKINGS + rank, CR_WHITE, hpbar_align_right(x + 120), y + rank * 12.0, TRACKER_HOLDTIME, TRACKER_FADETIME);
						HudMessage(s:name, s:killsmsg, s:statemsg;HUDMSG_FADEOUT, HUD_TEXT_TRACKER_NAME_ID + NUM_RANKINGS * 2 + rank, CR_WHITE, hpbar_align_left(x + 132), y + rank * 12.0, TRACKER_HOLDTIME, TRACKER_FADETIME);
					}
					else
					{
						tracked_tids[n] = INVALID_TID;
						break;
					}
				}
				else
				{
					break;
				}
			}
		}
		else
		{
			delay(35);
			hpbar_tracker_ = GetCVar("hpbar_tracker");
		}
	}
}

